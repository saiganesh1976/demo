    <script>
      document
        .getElementById("bloodBankForm")
        .addEventListener("submit", async function (event) {
          event.preventDefault();

          const formData = new FormData(event.target);
          const entryData = Object.fromEntries(formData.entries());
          const form = event.target;
          if (form.checkValidity() === false) {
            event.stopPropagation(); // Stop event propagation if form is invalid
            form.classList.add("was-validated"); // Add Bootstrap class for validation styling
            return;
          }

          try {
            const response = await fetch("/bloodbank", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify(entryData),
            })
              .then((response) => {
                if (response.ok) {
                  alert("Registration Successful");
                  return response.json();
                } else {
                  throw new Error("Registration Failed");
                }
              })
              .then((data) => {
                console.log(data);
              });
          } catch (error) {
            console.error("Error:", error);
          }
        });
    </script>

